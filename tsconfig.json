{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "~/*": ["./*"],
      "@assets/*": ["./assets"]
    },
    "typeRoots": ["node_modules/@types", "node_modules/phaser/types", "src/types"],
    "jsx": "react"
  },
  "include": ["src", "./.eslintrc.json"],
  "exclude": ["node_modules"]
}
